<h1 align = "center">Order ID #<%= @order.id %> Details</h1>
<center>
  <table>
    <tr>
      <th>Item</th>
      <th>Sold By</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Subtotal</th>
    </tr>
  <% @order.item_orders.each do |item_order|%>
    <tr>
    <section id = "ordered-item-<%=item_order.item_id%>">
        <td><p><center><%=link_to item_order.item.name, "/items/#{item_order.item_id}"%></center></p></td>
        <td><p><center><%= link_to item_order.item.merchant.name, "/merchants/#{item_order.item.merchant.id}"%></center></p></td>
        <td><p><center><%= number_to_currency(item_order.price)%></center></p></td>
        <td><p><center><%= item_order.quantity%></center></p></td>
        <td><p><center><%= number_to_currency(item_order.subtotal)%></center></p></td>
      </section>
    </tr>
  <% end %>
</table>

<section id="grandtotal">
  <p><b>Order Total: <%=number_to_currency(@order.grandtotal)%></b></p>
</section>
<section id="status">
  Current Status: <i><%= @order.status%></i>
  <br />Last Updated On: <%= @order.updated_at%>
  <br />Order Placed On: <%= @order.created_at%>
</section>

<section class = "shipping-address">
  <h1 align = "center">Shipping Info</h1>
  <table>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
    </tr>
    <tr>
      <td><p><%= @order.name %> </p></td>
      <td><p><%= @order.address %> </p></td>
      <td><p><%= @order.city %> </p></td>
      <td><p><%= @order.state %> </p></td>
      <td><p><%= @order.zip %> </p></td>
    </tr>
  </table>
</section>
