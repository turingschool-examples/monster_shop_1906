<h1> Welcome! Everything is fine. </h1>
<center>
  <h3>Please enter your details to sign up:</h3><br>
</center>

<%= form_for(@user, url: register_path) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :address %>
    <%= f.text_field :address %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :state %>
    <%= f.text_field :state %>

    <%= f.label :zipcode %>
    <%= f.text_field :zipcode %>

    <%= f.label :email %>
    <%= f.text_field :email, value: nil %>

    <%= f.label :password %>
    <%= f.password_field :password, value: nil  %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, value: nil  %>

    <%= f.submit 'Submit' %>
<% end %>
